{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ingredients": {
      "type": "component",
      "component": "recipe.ingredients-section",
      "repeatable": true
    },
    "preparation": {
      "type": "component",
      "component": "recipe.preparation-step",
      "repeatable": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "preparationTime": {
      "type": "component",
      "component": "recipe.preparation-time",
      "repeatable": false
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "recommended": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "totalCalories": {
      "type": "integer"
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "favourites"
    }
  }
}
