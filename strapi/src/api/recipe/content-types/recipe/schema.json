{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "title": {
      "type": "string"
    },
    "preparation": {
      "type": "richtext"
    },
    "ingredients": {
      "type": "component",
      "component": "recipe.ingredient",
      "repeatable": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "preparationTime": {
      "type": "component",
      "component": "recipe.preparation-time",
      "repeatable": false
    },
    "slug": {
      "type": "customField",
      "customField": "plugin::auto-locales-slug.auto-locales-slug",
      "required": true,
      "options": {
        "pattern": "title"
      }
    }
  }
}
